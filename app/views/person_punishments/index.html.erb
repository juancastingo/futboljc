<p id="notice"><%= notice %></p>

<h1>Person Punishments</h1>

<table>
  <thead>
    <tr>
      <th>Punishment</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_punishments.each do |person_punishment| %>
      <tr>
        <td><%= person_punishment.punishment_id %></td>
        <td><%= person_punishment.person_id %></td>
        <td><%= link_to 'Show', person_punishment %></td>
        <td><%= link_to 'Edit', edit_person_punishment_path(person_punishment) %></td>
        <td><%= link_to 'Destroy', person_punishment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

